.next-code {
  width: 100%;
  min-height: 100vh;
  background-color: #E9DFC8;
  overflow: hidden;
}
.next-code-head {
  margin: 10rpx 0 0 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.next-code-head image:nth-child(1) {
  height: 124rpx;
}
.next-code-head image:nth-child(2) {
  height: 150rpx;
}
.next-code-main {
  height: 410rpx;
  text-align: center;
  margin: 200rpx auto 150rpx;
}
.next-code-main image {
  height: 100%;
}
.next-code-box {
  width: 486rpx;
  height: 110rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.next-code-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}
.next-code-cash {
  width: 440rpx;
  height: 70rpx;
  margin: 0 18rpx 20rpx 0;
  position: relative;
  z-index: 10;
}