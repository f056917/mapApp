.clue-info {
  width: 100%;
  min-height: 100vh;
  background: url(https://linwuhehuan.oss-accelerate-overseas.aliyuncs.com/xqtn/scroll.png) center no-repeat;
  background-size: 90% 100%;
  background-color: #E9DFC8;
  position: relative;
  overflow: hidden;
}
.clue-info-close {
  height: 86rpx;
  position: absolute;
  top: 34rpx;
  right: 78rpx;
  z-index: 10;
}
.clue-info-close image {
  height: 100%;
}
.clue-info-main {
  width: 476rpx;
  min-height: 600rpx;
  padding: 24rpx 32rpx 48rpx;
  background: url(https://linwuhehuan.oss-accelerate-overseas.aliyuncs.com/xqtn/border.png) center no-repeat;
  background-size: 100% 100%;
  margin: 150rpx auto 600rpx;
}
.clue-info-title {
  text-align: center;
  padding-bottom: 12rpx;
  border-bottom: 6rpx solid #333;
  margin-bottom: 40rpx;
}
.clue-info-title text {
  color: #333;
  font-size: 44rpx;
  font-weight: bold;
}
.clue-info-image {
  width: 216rpx;
  height: 216rpx;
  margin: 0 auto 48rpx;
}
.clue-info-image image {
  width: 100%;
  height: 100%;
}
.clue-info-content {
  color: #333;
  font-size: 34rpx;
  margin-bottom: 190rpx;
}
.clue-info-bt {
  height: 72rpx;
  margin-bottom: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.clue-info-bt image {
  height: 100%;
}
.clue-info-rabbit {
  height: 714rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.clue-info-rabbit image {
  height: 100%;
}