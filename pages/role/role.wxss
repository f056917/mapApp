.role {
  width: 100%;
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  background-color: #E9DFC8;
  position: relative;
  overflow: hidden;
}
.role-close {
  width: 95rpx;
  height: 80rpx;
  position: absolute;
  top: 8rpx;
  right: 0;
  z-index: 10;
}
.role-title {
  height: 40rpx;
  margin-bottom: 8rpx;
  display: block;
}
.role-hint {
  height: 24rpx;
  margin-bottom: 30rpx;
}
.role-handle {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.role-handle image {
  height: 20rpx;
  margin-right: 8rpx;
}
.role-handle view {
  color: #333;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.role-handle view text:nth-child(2) {
  color: #ff0000;
}
.role-main {
  width: 100%;
  padding: 0 14rpx;
  box-sizing: border-box;
  background-color: #CCC0A1;
  overflow: hidden;
}
.role-type {
  text-align: center;
  margin: 30rpx 0 20rpx;
}
.role-type text {
  color: #333;
  font-size: 38rpx;
  font-weight: bold;
}
.role-item {
  height: 96rpx;
  border-bottom: 2rpx solid #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.role-item-l {
  display: flex;
  align-items: center;
}
.role-item-l image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}
.role-item-l text {
  color: #333;
  font-size: 22rpx;
  font-weight: bold;
}
.role-item-r {
  display: flex;
  align-items: center;
}
.role-avatar {
  width: 60rpx;
  height: 60rpx;
  font-size: 0;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.role-avatar image:nth-child(1) {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #333;
  border-radius: 50%;
  box-sizing: border-box;
}
.role-avatar image:nth-child(2) {
  height: 18rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 10;
}
.role-item-r text {
  width: 160rpx;
  color: #333;
  font-size: 22rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.role-item-bt {
  width: 50rpx;
  margin-right: 111rpx;
}
.role-bt-box {
  text-align: center;
  font-size: 0;
  margin: 76rpx 0 54rpx;
}
.role-bt {
  height: 72rpx;
  position: relative;
  overflow: hidden;
}
.role-bt image:nth-child(1) {
  height: 100%;
}
.role-bt image:nth-child(2) {
  height: 36%;
  position: absolute;
  top: 50%;
  right: 140rpx;
  z-index: 10;
  transform: translate(0, -50%);
}
.role-bt-act {
  width: 432rpx;
  height: 72rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.role-bt-act image:nth-child(1) {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
}
.role-bt-act image:nth-child(2) {
  height: 21rpx;
  margin-top: 6rpx;
}